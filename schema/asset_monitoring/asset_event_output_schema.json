{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "aitrios:app:output:event:asset",
  "version": "1.0.2",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "integer",
      "description": "Unique identifier for the vandalism incident"
    },

    "asset_id": {
      "type": "string",
      "description": "Unique identifier for the asset that was vandalized"
    },

    "asset_type": {
      "type": "string",
      "enum": ["vehicle", "building", "streetlight", "wastebin", "banner", "camera", "cablebox", "other", "unspecified"],
      "description": "Type of the asset that was vandalized"
    },

    "event_location": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Feature"]
        },
        "properties": {
          "type": "object",
          "properties": {
            "timestamp": {
              "type": "integer"
            },
            "dwell_time": {
              "type": "number",
              "description": "Duration of time the person has been in the specified area for more than the specified time. [seconds]"
            }
          },
          "required": ["timestamp", "dwell_time"]
        },
        "geometry": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Point"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "required": ["type", "coordinates"]
        }
      },
      "required": ["type", "properties", "geometry"]
    },
    
    "status": {
      "type": "string",
      "enum": ["reported", "under_investigation", "resolved"],
      "description": "Current status of the vandalism incident"
    },

    "curb_zone_id": {
      "type": "string"
    },
		  
    "curb_area_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
		  
    "curb_space_id": {
      "type": "string"
    },

    "object_id": {
      "type": "integer",
      "description": "Unique identifier for the person who vandalized the asset"
    }
  },
  "required": [
    "event_id", "asset_id", "asset_type", "event_location", "status"
  ],
  "additionalProperties": false
}