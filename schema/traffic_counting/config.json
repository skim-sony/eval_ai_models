{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "aitrios:app:config:counting",
  "version": "1.0.1",
  "type": "object",
  "properties": {

    "counting_type": {
      "type": "string",
      "enum": ["total", "peak", "average"],
      "description": "Type of count measurement"
    },

    "counting_frequency": {
      "type": "integer",
      "enum": [1,5,15],
      "description": "Freqyency of count measurement in minutes"
    },

    "counting_boundary": {
      "$comment": "Boundary configuration for traffic counting",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "boundary_id": {
            "type": "string"
          },
          "geometry": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["LineString", "Polygon"]
              },
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "minItems": 2,
                    "maxItems": 2
                  }
                },
                "minItems": 1,
                "maxItems": 1
              }
            },
            "required": ["type", "coordinates"],
            "additionalProperties": false
          }
        },
        "required": ["boundary_id", "geometry"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}