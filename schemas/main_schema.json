{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Main schema for frame-based output",
  "version": "1.0.1",
  "type": "object",
  "properties": {
    "app_config": { 
      "$comment": "'app_config' is to log configurations and settings of AI model and algorithm.",
      "type": "object",
      "properties": {
        "general_config": { "$ref": "general_config.json" },
        "counting_config": { "$ref": "traffic_counting/config.json" },
        "parking_config": { "$ref": "parking_status/config.json" }
        },
        "required": [
          "general_config"]
      }
    },
    
    "output": {
      "$comment": "'output' is an array of frame-based outputs.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "frame_id": { "type": "integer" },
          "timestamp": { "type": "string" },
          "detection_results": { "$ref": "object_detection/detection_results.json" },
          "counting_results": { "$ref": "traffic_counting/counting_results.json" },
          "parking_results": { "$ref": "parking_status/parking_results.json" }
        },
        "required": [
          "frame_id",
          "detection_results"
        ]
      }
  },
  "required": [
    "config", 
    "output"]
}