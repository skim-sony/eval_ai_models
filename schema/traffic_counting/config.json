{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "aitrios:app:config:counting",
  "version": "1.0.1",
  "type": "object",
  "properties": {

    "traffic_counting": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["LineString", "MultiLineString", "Polygon"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "minItems": 1
        }
      },
      "required": ["type", "coordinates"]
    },

    "bike_counting": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["LineString", "Polygon"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "minItems": 1
        }
      },
      "required": ["type", "coordinates"]
    },

    "pedestrian_counting": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["LineString", "Polygon"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "minItems": 1
        }
      },
      "required": ["type", "coordinates"]
    }
  }
}